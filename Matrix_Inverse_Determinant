      "cell_type": "code",
      "metadata": {
        "id": "bdjtTsmiIDpH"
      },
      "source": [
        " # b is a list and i is an integer\n",
        "def permutation(b, i):\n",
        "  if i in b:\n",
        "    n = len(b)\n",
        "    location = b.index(i)\n",
        "    if location + 1 < n:\n",
        "      my_return = b[location + 1]\n",
        "    else:\n",
        "      my_return = b[0]\n",
        "  else:\n",
        "    my_return = i\n",
        "  return my_return"
      ],
      "execution_count": 64,
      "outputs": []
    },
